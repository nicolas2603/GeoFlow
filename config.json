{
  "theme": {
    "title": "Geoflow",
    "version": "1.0",
    "colors": {
      "primary": "#378ba7",
      "primaryDark": "#519cb3",
      "primaryText": "#052d36",
      "primaryTextDark": "#f9fafb"
    },
    "logo": "assets/logo.png"
  },
  "map": {
    "center": [43.6108, 3.8767],
    "zoom": 10,
    "minZoom": 3,
    "maxZoom": 19,
    "baseLayers": {
      "osm": {
        "name": "OpenStreetMap",
        "url": "https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png",
        "preview": "assets/osm.png",
        "attribution": "© OpenStreetMap",
        "maxZoom": 19,
        "default": true
      },
      "satellite": {
        "name": "Satellite ESRI",
        "url": "https://server.arcgisonline.com/ArcGIS/rest/services/World_Imagery/MapServer/tile/{z}/{y}/{x}",
        "preview": "assets/satellite.png",
        "attribution": "© Esri",
        "maxZoom": 19
      },
      "ign-orthophoto": {
        "name": "Satellite IGN",
        "type": "wmts",
        "url": "https://data.geopf.fr/wmts?SERVICE=WMTS&REQUEST=GetTile&VERSION=1.0.0&LAYER=ORTHOIMAGERY.ORTHOPHOTOS&STYLE=normal&TILEMATRIXSET=PM&TILEMATRIX={z}&TILEROW={y}&TILECOL={x}&FORMAT=image/jpeg",
        "preview": "assets/ortho-ign.png",
        "attribution": "© IGN",
        "maxZoom": 19
      },
      "ign-plan": {
        "name": "Plan",
        "type": "wmts",
        "url": "https://data.geopf.fr/wmts?SERVICE=WMTS&REQUEST=GetTile&VERSION=1.0.0&LAYER=GEOGRAPHICALGRIDSYSTEMS.PLANIGNV2&STYLE=normal&TILEMATRIXSET=PM&TILEMATRIX={z}&TILEROW={y}&TILECOL={x}&FORMAT=image/png",
        "preview": "assets/plan-ign.png",
        "attribution": "© IGN",
        "maxZoom": 18
      },
      "ign-cadastre": {
        "name": "Cadastre",
        "type": "wmts",
        "url": "https://data.geopf.fr/wmts?SERVICE=WMTS&REQUEST=GetTile&VERSION=1.0.0&LAYER=CADASTRALPARCELS.PARCELLAIRE_EXPRESS&STYLE=normal&TILEMATRIXSET=PM&TILEMATRIX={z}&TILEROW={y}&TILECOL={x}&FORMAT=image/png",
        "preview": "assets/cadastre.png",
        "attribution": "© IGN",
        "maxZoom": 20
      },
      "topo": {
        "name": "OpenTopo",
        "url": "https://{s}.tile.opentopomap.org/{z}/{x}/{y}.png",
        "preview": "assets/topo.png",
        "attribution": "© OpenTopoMap",
        "maxZoom": 17
      },
      "positron": {
        "name": "Positron",
        "url": "https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}.png",
        "preview": "assets/positron.png",
        "attribution": "© CARTO",
        "maxZoom": 19
      },
      "darkmatter": {
        "name": "Dark Matter",
        "url": "https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}.png",
        "preview": "assets/dark.png",
        "attribution": "© CARTO",
        "maxZoom": 19
      }
    }
  },
  "api": {
    "backend": "http://localhost:3001",
    "nominatim": "https://nominatim.openstreetmap.org"
  },
  "layers": {
    "themes": [
      {
        "id": "admin",
        "name": "Administratif",
        "icon": "fa-earth-americas",
        "layers": [
          {
            "id": "communes",
            "name": "Limites communales",
            "type": "empty",
            "source": "IGN",
            "date": "2024",
            "url": "",
            "style": {}
          }
        ]
      },
	  {
        "id": "demo",
        "name": "Démonstration",
        "icon": "fa-star",
        "layers": [
          {
            "id": "points",
            "name": "Points d'intérêt",
            "type": "geojson",
            "source": "OpenStreetMap",
            "date": "2024",
            "url": "data/demo_points.geojson",
            "style": {
              "clustered": true,
              "clusterRadius": 50
            }
          },
          {
            "id": "zones",
            "name": "Zones administratives",
            "type": "geojson",
            "source": "IGN",
            "date": "2024",
            "url": "data/demo_zones.geojson",
            "style": {
              "color": "#2563eb",
              "weight": 2,
              "fillOpacity": 0.2
            }
          }
        ]
      }
    ]
  },
  "legends": {
    "points": {
      "type": "categorized",
      "items": [
        { "symbol": "point", "color": "#e74c3c", "label": "Monument" },
        { "symbol": "point", "color": "#3498db", "label": "Culture" },
        { "symbol": "point", "color": "#2ecc71", "label": "Parc" },
        { "symbol": "point", "color": "#f39c12", "label": "Transport" }
      ]
    },
    "zones": {
      "type": "simple",
      "items": [
        { "symbol": "polygon", "color": "#2563eb", "label": "Centre-ville" }
      ]
    }
  },
  "features": {
    "layers": true,
    "legend": true,
    "draw": true,
    "measure": true,
    "metier": true,
    "tools": true,
    "export": true,
    "print": true,
    "search": true
  },
  "cache": {
    "enabled": false
  }
}